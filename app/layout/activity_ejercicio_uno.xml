<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".ExcerciseOne">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardUseCompatPadding="true"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ejercicio"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reto 1:\n Creación de la clase 'Animal' "
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical|right"/>
                <EditText
                    android:id="@+id/txt_clase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Resultado"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_color_brown"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/dog"
                    android:adjustViewBounds="true"
                    android:layout_margin="8dp"/>

                <TextView
                    android:id="@+id/tv_question2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_color_brown"
                    android:layout_marginTop="15dp"
                    android:textSize="9pt"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/propiedad_antes_creada"
                    android:paddingLeft="20dp"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/rdg_color_brown"
                    android:layout_toRightOf="@id/iv_color_brown"
                    android:layout_below="@id/tv_question2"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Raza"
                        android:id="@+id/rb_raza"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edad"
                        android:id="@+id/rb_edad"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vacuna"
                        android:id="@+id/rb_vacuna"
                        android:layout_marginBottom="7dp"/>
                </RadioGroup>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reto 2:Declaración de las variables \n 'Edad','Nombre','Hambriento' "
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical|right"/>
                <EditText
                    android:id="@+id/txt_varibale_edad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Variable edad"/>
                <EditText
                    android:id="@+id/txt_varibale_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Variable nombre"/>
                <EditText
                    android:id="@+id/txt_varibale_hambre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Variable hambriento"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reto 3: Metodo para asignar el nombre a la clase Animal"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical|right"/>
                <EditText
                    android:id="@+id/txt_metodo_setter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Método Setter"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/etodo_extraer_el_nombre"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical|right"/>
                <EditText
                    android:id="@+id/txt_metodo_getter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Método Getter"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnPuntos"
                    android:background="@color/colorAzul"
                    android:text="@string/verificar"/>


            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>