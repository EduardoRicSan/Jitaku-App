<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashChatActivity"
    android:background="@color/button_color_green_sea">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">



        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/steve"
            android:id="@+id/iv_logo"/>


        <TextView
            android:id="@+id/txv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Piensa diferente..."
            android:textColor="@color/button_color_sun_flower"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txv_begin_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Esto es para los locos, los inadaptados, los rebeldes, los alborotadores, aquellos que no encajan y ven las cosas diferentes."
            android:textColor="@color/button_color_midnight_blue"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="italic" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/loading1"
            android:id="@+id/giv_load"/>



    </LinearLayout>

</LinearLayout>