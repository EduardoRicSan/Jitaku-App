<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".ConceptoBasico">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardUseCompatPadding="true"
        >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/qu_es_una_clase"
        android:textSize="24dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/definicion_clase"
        android:textSize="14dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center_vertical|right"/>
        <ImageView
            android:src="@drawable/clase"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Propiedades del objeto persona"
            android:textSize="24dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Podemos definir algunas propiedades del objeto persona como: \n * Nombre\n * Apellidos \n *Edad; entre otros. \n Para establecer estas propiedades dentro de la clase \n creamos variables, cuidÃ¡ndo de asignarle a cada \n propiedad el tipo de dato que le corresponde. "
            android:textSize="14dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_vertical|right"/>
        <ImageView
            android:src="@drawable/propiedades"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <TextView
            android:id="@+id/tv_ejercicosB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ejercicios"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"/>

</LinearLayout>
    </ScrollView>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>