<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/celdaSeleccionada">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/btnGenerarSopa"
                style="@style/estiloBotonAzulClaro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generar sopa" />


            <GridView
                android:id="@+id/gvContenedor"
                android:layout_width="wrap_content"
                android:layout_height="333dp"
                android:layout_margin="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="50dp"
                android:columnWidth="0dp"
                android:elevation="0dp"
                android:fitsSystemWindows="false"
                android:horizontalSpacing="0dp"
                android:minHeight="0dp"
                android:numColumns="10"
                android:padding="0dp"
                android:paddingBottom="0dp"
                android:paddingEnd="0dp"
                android:paddingHorizontal="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingStart="0dp"
                android:paddingTop="0dp" />


            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <Button
                    android:layout_marginLeft="16dp"
                    android:id="@+id/btnLimpiar"
                    style="@style/estiloBotonAzulClaro"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:text="Limpiar tabla" />

                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnFinalizar"
                    style="@style/estiloBotonAzulClaro"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:text="Finalizar juego" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="8dp">

            <GridView
                android:id="@+id/gvPalabras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numColumns="auto_fit"
                tools:layout_editor_absoluteX="281dp"
                tools:layout_editor_absoluteY="0dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>