<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/imv_memo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imv_ahorcado"
        android:background="@drawable/memo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="33dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imv_memo"
        android:background="@drawable/background"
        android:text="Memorama"
        android:textColor="@color/button_color_sun_flower"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/imv_memo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp" />

    <ImageView
        android:id="@+id/imv_ahorcado"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ahorcado"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="33dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="186dp"
        android:background="@drawable/background"
        android:text="AHORCADO GAME"
        android:textColor="@color/button_color_sun_flower"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/imv_ahorcado"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="237dp" />

    <ImageView
        android:id="@+id/imv_sopa"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="157dp"
        android:background="@drawable/sopletras"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="256dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="82dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/background"
        android:text="WORDS GAME"
        android:textColor="@color/button_color_sun_flower"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/imv_sopa"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp" />

    <ImageView
        android:id="@+id/imv_galeria"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imv_ahorcado"
        android:layout_marginBottom="149dp"
        android:background="@drawable/gallery"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="256dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/background"
        android:text="GALERIA JITAKU"
        android:textColor="@color/button_color_sun_flower"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/imv_sopa"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp" />











</RelativeLayout>