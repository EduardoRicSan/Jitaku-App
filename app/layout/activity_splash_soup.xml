<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashSoupActivity"
    android:background="@color/button_color_green_sea">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/txv_beginners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Words Puzzle"
            android:textColor="@color/button_color_midnight_blue"
            android:textSize="26sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_logo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:src="@drawable/mark"
            app:border_color="@color/button_color_sun_flower"/>


        <TextView
            android:id="@+id/txv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="About Programming:"
            android:textColor="@color/button_color_sun_flower"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txv_begin_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Programming is one of the most important things we can do"
            android:textColor="@color/button_color_midnight_blue"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/loading1"
            android:id="@+id/giv_load"/>



    </LinearLayout>

</LinearLayout>