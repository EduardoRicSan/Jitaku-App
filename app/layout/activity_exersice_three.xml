<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseThree">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@android:color/background_dark"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Reto : Creación de la clase casa, con los siguientes atributos:\n *No. Cuartos,color,tipo de material.\n y sus métodos setter y getter \n \n"
                            android:textColor="@color/colorBlanco"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_class"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="      public class"
                                android:textColor="@color/colorBlanco"
                                android:textSize="16dp" />

                            <EditText
                                android:id="@+id/txt_name_house"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorBlanco"
                                android:textSize="16dp"
                                android:hint="  Nombre  "
                                />
                            <TextView
                                android:id="@+id/tv_llave"
                                android:text="   { "
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_modelo"
                                android:text="        private "
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:id="@+id/txt_numero_cuartos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorBlanco"
                                android:textSize="16dp"
                                android:hint="tipo de dato"
                                />
                            <EditText
                                android:id="@+id/txt_nombre_cuarto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:background="@color/colorBlanco"
                                android:textSize="16dp"
                                android:hint="nombre"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_marca"
                                android:textSize="14dp"
                                android:text="        private "
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:id="@+id/txt_tipo_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorBlanco"
                                android:textSize="16dp"
                                android:hint="tipo de dato"
                                />
                            <EditText
                                android:id="@+id/txt_nombre_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:background="@color/colorBlanco"
                                android:textSize="16dp"
                                android:hint="nombre"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_ano"
                                android:text="        private "
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:id="@+id/txt_tipo_material"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorBlanco"
                                android:textSize="16dp"
                                android:hint="tipo de dato "
                                />
                            <EditText
                                android:id="@+id/txt_nombre_material"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:background="@color/colorBlanco"
                                android:textSize="16dp"
                                android:hint="nombre"
                                />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_constructor"
                            android:textSize="16dp"
                            android:text="            public Casa(){}     //Método constructor\n              //Método setter y getter"
                            android:textColor="@color/colorBlanco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_setter_modelo"
                                android:text="        public void setNoCuarto ( "
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:id="@+id/txt_setter_cuarto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorBlanco"
                                android:textSize="14dp"
                                android:hint="tipo dato"
                                />
                            <TextView
                                android:id="@+id/txt_setModelo"
                                android:text="noCuarto){"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <RelativeLayout
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="           noCuarto =noCuarto; \n            }"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/txt_getter_modelo"
                                android:text="           public"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:id="@+id/txt_tipo_gcuarto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:background="@color/colorBlanco"
                                android:textSize="14dp"
                                android:hint="tipo"
                                />
                            <TextView
                                android:text="  getNoCuarto(){"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="           return =noCuarto; \n           }"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_setter_color"
                                android:text="          public void setColor ( "
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:id="@+id/txt_setter_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorBlanco"
                                android:textSize="14dp"
                                android:hint="tipo dato"
                                />
                            <TextView
                                android:id="@+id/txt_setColor"
                                android:text=" color){"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="           color =color; \n            }"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/txt_getter_marca"
                                android:text="           public"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:id="@+id/txt_tipo_gcolor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:background="@color/colorBlanco"
                                android:textSize="14dp"
                                android:hint="tipo"
                                />
                            <TextView
                                android:text="  getColor(){"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="           return =color; \n           }"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_setter_anio"
                                android:text="          public void setMaterial ( "
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:id="@+id/txt_setter_material"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorBlanco"
                                android:textSize="14dp"
                                android:hint="tipo dato"
                                />
                            <TextView
                                android:id="@+id/txt_setAnio"
                                android:text=" material){"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="           material =material; \n           }"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/txt_getter_anio"
                                android:text="           public"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/txt_tipo_gmaterial"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/txt_getter_anio"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:background="@color/colorBlanco"
                                android:hint="tipo"
                                android:textSize="14dp" />
                            <TextView
                                android:text="  getMaterial(){"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="           return =material; \n           }\n }"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlanco"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>