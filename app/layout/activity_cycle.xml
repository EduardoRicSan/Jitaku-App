<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".Cycle">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardUseCompatPadding="true"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/qu_es_un_ciclo_o_bucles"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/definicion_ciclo"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="¿Qué clase de ciclos se utilizan en programación?\nEn programación podemos utilizar tres tipos de ciclos que son: For, While, Do-While.\nCada uno de estos tienen una finalidad, como las siguiente:\nFor: El ciclo se ejecuta un número de veces conocido.\nWhile:Este ciclo se repite tantas veces se cumpla una condición.\nDo-While: Ciclo que ejecuta una vez las acciones que están condicionadas, después de ello evalúa si se ejecuta una segunda vez.
                    \nEstructura: \n"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ciclofor"
                    android:textAlignment="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Estructura \nwhile (condición) { instrucciones a ejecutarse }\n Ejemplo:\n
                    while (edad>18) {\nSystem.out.println('Es mayor de 18');\n} \nEstructura:\n"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/sintaxis_ciclo_do"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ciclodowhile"
                    android:textAlignment="center" />

            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>