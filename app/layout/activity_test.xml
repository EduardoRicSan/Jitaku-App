<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    android:background="@drawable/fondo_degradado"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/tv_question"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:paddingLeft="20dp"
                            android:text="¿Qué es una Clase en Poo?"
                            android:textSize="9pt"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/rdg_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_question"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text="Es una técnica para desarrollar soluciones computacionales utilizando componentes de software" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Datos en conjuntos modulares de elementos de información del mundo real" />

                            <RadioButton
                                android:id="@+id/rb_question_good1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Son definiciones de las propiedades y comportamiento de un tipo de objeto concreto. La instanciación es la lectura de estas definiciones y la creación de un objeto a partir de ellas." />

                        </RadioGroup>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <RadioGroup
                            android:id="@+id/rdg_color_brown"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="0dp"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:layout_alignParentLeft="true">
                            <TextView
                                android:id="@+id/tv_question2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"

                                android:paddingLeft="20dp"
                                android:text="¿Que es un objeto?"
                                android:textSize="9pt"
                                android:textStyle="bold" />

                            <RadioButton
                                android:id="@+id/rb_question_good2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Datos en conjuntos modulares de elementos de información del mundo real" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Es una técnica para desarrollar soluciones computacionales utilizando componentes de software" />

                            <RadioButton
                                android:layout_width="278dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text="Es un modelo que define un conjunto de variables" />
                        </RadioGroup>

                    </RelativeLayout>



                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/tv_question3"
                            android:layout_width="match_parent"
                            android:layout_height="59dp"
                            android:layout_marginTop="15dp"
                            android:paddingLeft="20dp"
                            android:text="¿Cuáles son los componentes de la Programación Orientada a Objetos?"
                            android:textSize="9pt"
                            android:textStyle="bold" />


                        <RadioGroup
                            android:id="@+id/rdg_color_brow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_question3"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp">

                            <RadioButton
                                android:id="@+id/rb_question_good3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Objeto, Clase, Polimorfismo,Encapsulamiento, Herencia." />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Introduccion,Conclusion,Desarrollo" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text="Ninguna de las anteriores" />
                        </RadioGroup>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/tv_question4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:paddingLeft="20dp"
                            android:text="¿Que es un atributo?"
                            android:textSize="9pt"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/rdg_color_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_question4"

                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="WHITE" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PURPLE" />

                            <RadioButton
                                android:id="@+id/rb_question_good4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text="Son las características indiiduales que diferencian un objeto de otro y determinan su apariencia, estado u otras cualidades." />
                        </RadioGroup>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/tv_question5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:paddingLeft="20dp"
                            android:text="Propiedad que indica que un elemento puede tomar distintas formas."
                            android:textSize="9pt"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/rdg_color_brow1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_question5"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Herencia" />

                            <RadioButton
                                android:id="@+id/rb_question_good5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Polimorfismo" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text="Clase" />
                        </RadioGroup>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/tv_question6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:paddingLeft="20dp"
                            android:text="Ocultamiento de información, datos o funciones especiales a los usuarios"
                            android:textSize="9pt"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/rdg_color_bro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_question6"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp">

                            <RadioButton
                                android:id="@+id/rb_question_good6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*Encpsulamiento" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Polimorfismo" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text="Herencia" />
                        </RadioGroup>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/tv_question7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:paddingLeft="20dp"
                            android:text="Posibilidad de heredar un método de un módulo y cambiarle el comportamiento en el heredero, con la opción de poder usar el original, si se desea."
                            android:textSize="9pt"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/rdg_color_bro2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_question7"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp">

                            <RadioButton
                                android:id="@+id/rb_question_good7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*Sobreescritura" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Polimorfismo" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text="Herencia" />
                        </RadioGroup>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_question8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:paddingLeft="20dp"
                            android:text="Representación gráfica de un modelo"
                            android:textSize="9pt"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/rdg_animal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_question8"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dibujo" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mapa" />

                            <RadioButton
                                android:id="@+id/rb_question_good8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text="Diagrama" />
                        </RadioGroup>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/tv_question10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:paddingLeft="20dp"
                            android:text="Son plantillas que agrupan comportamiento (métodos) y estados (atributos) de los futuros objetos."
                            android:textSize="9pt"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/rdg_animal2"
                            android:layout_below="@id/tv_question10"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*Clase"
                                android:id="@+id/rb_question_good9" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Herencia"
                                android:layout_marginBottom="7dp" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Polimorfismo" />


                        </RadioGroup>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <ImageView
                    android:id="@+id/iv_send_ac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp" />

                <Button
                    android:id="@+id/btn_resultado"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/buttonstyle5"
                    android:text="Show Results!"
                    android:textColor="@color/sign_in" />



            </LinearLayout>




        </ScrollView>

    </LinearLayout>

