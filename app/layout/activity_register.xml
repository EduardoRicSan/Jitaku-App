<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_color_midnight_blue"
    tools:context=".RegisterActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoPerfil"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:src="@drawable/programador"
            app:border_color="@color/button_color_sun_flower"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NEW USER"
            android:textColor="@color/button_color_sun_flower"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/txv_register"
            android:padding="15dp"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="EMAIL"
            android:textColorHint="@color/button_color_turquoise"
            android:id="@+id/edt_email"
            android:inputType="textEmailAddress"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="PASSWORD"
            android:textColorHint="@color/button_color_turquoise"
            android:id="@+id/edt_password"
            android:inputType="textPassword"/>

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonstyle3"
            android:text="REGISTER"
            android:textColor="@color/black"
            android:id="@+id/btn_register_user"/>










    </LinearLayout>



</LinearLayout>