<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".SubmenuPoo3">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Patrones de diseño"
                android:textAlignment="center"
                android:textColor="#E74C3C"
                android:textSize="10pt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Conceptos basicos"
                android:textAlignment="center"
                android:textColor="#E74C3C"
                android:textSize="10pt" />

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/card_algoritmos"
                    card_view:cardBackgroundColor="@android:color/holo_orange_light"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/txt_patrones_diseño"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Patrones de diseño"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlanco"
                        android:textSize="20dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_toRightOf="@+id/card_algoritmos"
                    android:layout_toEndOf="@+id/card_algoritmos"
                    card_view:cardBackgroundColor="@android:color/holo_orange_light"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/txt_tipo_patrones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tipos de patrones de diseño"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlanco"
                        android:textSize="20dp" />

                </android.support.v7.widget.CardView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/card_tipoDatos"
                    card_view:cardBackgroundColor="@android:color/holo_orange_light"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/txt_ejercicios_patrones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ejercicios patrones de diseño"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlanco"
                        android:textSize="20dp" />

                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>