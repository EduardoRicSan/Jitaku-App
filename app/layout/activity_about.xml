<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/scroll_about">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/zenaido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="@dimen/elev_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_zenadio"
                android:layout_width="@dimen/imgwidth"
                android:layout_height="@dimen/imgheight"
                android:src="@drawable/zenaido"
                android:adjustViewBounds="true"
                android:layout_margin="@dimen/img"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_zenadio"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textSize="@dimen/txtsize"
                android:text="@string/desarrollador"
                android:paddingLeft="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_zenaido_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_zenadio"
                android:layout_marginTop="@dimen/txvsize2"
                android:textAlignment="center"
                android:textSize="@dimen/txname"
                android:text="@string/zena"
                android:paddingLeft="20dp"
                android:textStyle="bold"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/eduardo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_eduardo"
                    android:layout_width="@dimen/imgwidth"
                    android:layout_height="@dimen/imgheight"
                    android:src="@drawable/lalo"
                    android:adjustViewBounds="true"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tv_desarrollador_eduardo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_eduardo"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:textSize="@dimen/txvlalo"
                    android:text="@string/desarrollador"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_eduardo_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_eduardo"
                    android:layout_marginTop="40dp"
                    android:textAlignment="center"
                    android:textSize="8pt"
                    android:text="@string/lalo"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
       <android.support.v7.widget.CardView
           xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/jasmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_jasmin"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/jasmin"
                android:adjustViewBounds="true"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_desarrollador_jasmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_jasmin"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textSize="9pt"
                android:text="@string/desarrollador"
                android:paddingLeft="@dimen/paddingleftimv"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_jasmin_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_jasmin"
                android:layout_marginTop="40dp"
                android:textAlignment="center"
                android:textSize="8pt"
                android:text="@string/jas"
                android:paddingLeft="@dimen/pading"
                android:textStyle="bold"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/leonardo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_leonardo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/leo"
                    android:adjustViewBounds="true"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tv_desarrollador_leonardo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_leonardo"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:textSize="9pt"
                    android:text="@string/desarrollador"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_leonardo_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_leonardo"
                    android:layout_marginTop="40dp"
                    android:textAlignment="center"
                    android:textSize="8pt"
                    android:text="@string/leo"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>