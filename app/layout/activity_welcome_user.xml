<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/button_color_midnight_blue"
    tools:context=".WelcomeUserActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fam_action"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="-16dp"
        android:text="Bienvenido a Jitaku©"
        android:textColor="@color/button_color_nephritis"
        android:textSize="25sp"
        android:textStyle="italic" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoPerfil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="129dp"
        android:src="@drawable/programmer"
        app:border_color="@color/button_color_sun_flower" />



    <Button
        android:id="@+id/btn_test"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn_logout"
        android:layout_gravity="center"
        android:layout_marginStart="28dp"
        android:text="IR!"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp"
        android:background="@drawable/buttonstyle2"
        android:textColor="@color/button_color_nephritis"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="104dp"
        android:text="SALIR "
        android:textColor="@color/button_color_nephritis"
        android:layout_alignParentRight="true"
        android:layout_marginRight="104dp"
        android:background="@drawable/buttonstyle2"
        android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"/>







    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fam_action"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:fab_addButtonColorNormal="#6dcffc"
        app:fab_addButtonColorPressed="#287599"
        app:fab_addButtonPlusIconColor="#000000"
        app:fab_labelStyle="@style/menu_labels_style"
        >

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab_forum"
            app:fab_icon="@drawable/conversation"
            app:fab_addButtonColorNormal="#d0ff6b"
            app:fab_addButtonColorPressed="#8fb738"
            app:fab_size="mini"
            app:fab_title="Jitaku Chat"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab_about"
            app:fab_icon="@drawable/reunion"
            app:fab_addButtonColorNormal="#e68eff"
            app:fab_addButtonColorPressed="#7e2497"
            app:fab_size="mini"
            app:fab_title="Acerca de"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab_setting"
            app:fab_icon="@drawable/blog"
            app:fab_addButtonColorNormal="#f4ab6a"
            app:fab_addButtonColorPressed="#e67c19"
            app:fab_size="mini"
            app:fab_title="Jitaku Blog"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab_library"
            app:fab_icon="@drawable/library"
            app:fab_addButtonColorNormal="#5ca5ff"
            app:fab_addButtonColorPressed="#0940e2"
            app:fab_size="mini"
            app:fab_title="Ir a librería"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab_github"
            app:fab_icon="@drawable/games"
            app:fab_size="mini"
            app:fab_title="Jitaku Games"/>


    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>